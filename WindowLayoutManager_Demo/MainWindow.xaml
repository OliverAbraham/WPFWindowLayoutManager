        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WindowLayoutManager_Demo"
        mc:Ignorable="d"
        Title="MainWindow" Height="227" Width="465" FontSize="16" Background="FloralWhite">
